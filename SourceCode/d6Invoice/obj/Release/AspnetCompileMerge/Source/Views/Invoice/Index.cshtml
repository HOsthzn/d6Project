@{
    ViewBag.Title = "Invoice's";
}


<div class="">

    <table id="tbInvoices">

        <thead>
        <tr>
            <th colspan="6">
                @Html.ActionLink( "Add", "Create", null, new { @class = "btn btn-primary" } )
                <input id="dpDate" type="date" />
                @Html.DropDownList("ClientId", new SelectList( ViewBag.Clients, "Id", "Name" ), "Select Customer" )
            </th>
        </tr>
        <tr>
            <th>Invoice</th>
            <th>Client</th>
            <th>Date</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Total</th>
            <th>Is Paid</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
        <tr>
            <td colspan="8" >
                <nav class="col-7" aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item" id="btnPrevious">
                            <a class="page-link" href="#">Previous</a>
                        </li>

                        <li class="page-item" id="btnNext">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
                <select class="col-3" id="ddlRecPerPage">
                    <option value="10">10</option>
                    <option value="50" selected>50</option>
                    <option value="100">100</option>
                </select>
            </td>
        </tr>
        </tfoot>
    </table>
</div>

@section scripts
{
    <script type="text/javascript">
        document.addEventListener( "DOMContentLoaded", invoices.init );
    </script>
}