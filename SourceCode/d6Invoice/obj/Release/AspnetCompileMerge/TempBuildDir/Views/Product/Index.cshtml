@{
    ViewBag.Title = "Product's";
}

<div class="">
    <table id="tbProducts">
        <thead>
        <tr>
            <th colspan="3">
                @Html.ActionLink( "Add", "Create", null, new { @class = "btn btn-primary" } )
            </th>
        </tr>
        <tr>
            <th>Description</th>
            <th>Price</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
        <tr>
            <td colspan="5" >
                <nav class="col-6" aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item" id="btnPrevious">
                            <a class="page-link" href="#">Previous</a>
                        </li>

                        <li class="page-item" id="btnNext">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
                <select class="col-3" id="ddlRecPerPage">
                    <option value="10" selected>10</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
            </td>
        </tr>
        </tfoot>
    </table>
</div>

@section scripts
{
    <script type="text/javascript">
        document.addEventListener( "DOMContentLoaded", products.init );
    </script>
}